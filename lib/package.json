{
  "name": "@ryohey/webgl-react",
  "version": "0.6.2",
  "description": "React library for 2D rendering in WebGL with screen coordinates",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "start": "rollup --config --watch",
    "build": "rollup --config",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryohey/webgl-react.git"
  },
  "keywords": [
    "WebGL",
    "react"
  ],
  "author": "ryohey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryohey/webgl-react/issues"
  },
  "homepage": "https://github.com/ryohey/webgl-react#readme",
  "peerDependencies": {
    "react": ">=19.2.0"
  },
  "dependencies": {
    "@rehooks/component-size": "^1.0.3",
    "gl-matrix": "^3.4.3",
    "react-reconciler": "^0.33.0",
    "twgl.js": "^7.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/react": "^19.2.2",
    "@types/react-reconciler": "^0.32.1",
    "rollup": "^4.24.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.24.3"
  }
}
